<!DOCTYPE html>
<html>
  <head>
    <title>RunKeeper Connect</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="container">
      <div id="user_nav">

        <% if current_user %>
          Signed in as <%= current_user.name %> from <%= current_user.provider %>
          <%= link_to "Sign out", signout_path %>
        <% else current_user %>
          <%= link_to "Authorize with Runkeeper", "/auth/runkeeper" %> 
        <% end %>

      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>
      <%= yield %>
    </div>
    <%= yield :scripts %>
  </body>
</html>
